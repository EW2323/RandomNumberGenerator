<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include
        android:id="@+id/instruction_bar"
        layout="@layout/instruction_bar"
        android:layout_width="0dp"
        android:layout_height="?actionBarSize"
        android:padding="2dp"
        android:layout_gravity="center"
        android:layout_marginStart="280dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent" />

    <include
        android:id="@+id/from_and_to_input_layout"
        layout="@layout/from_and_to_input_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/tv_layout"
        layout="@layout/tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="316dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/from_and_to_input_layout"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>